<%- include('../includes/head.ejs'); %>

  <title>Edit Movies</title>
  </head>

  <body>
    <%- include('./nav.ejs'); %>


      <div class="content">
        <h1 class="heading">
          <%=title %>
        </h1>
        <p class="description">Edit Movie Rating</p>


        <form action="edit" method="post" class="form" role="form" novalidate>

          <% if (errorMessage) { %>
            <p style="font-size: 1rem; color: rgb(238, 65, 65);" class="h3 mb-3 fw-normal">
              <%= errorMessage %>
            </p>
            <% } %>

              <div class="form-group  required">
                <label class="control-label" for="rating">Your rating out of 10 </label>
                <input class="form-control" id="rating" name="rating" required type="number" step=".1"
                  value="<%= oldValues.rating %>">
              </div>
              <div class="form-group  required">
                <label class="control-label" for="review">Your Review</label>
                <input class="form-control" id="review" name="review" required type="text"
                  value="<%= oldValues.review %>">
              </div>
              <input type="hidden" value="<%= movieId %>" name="movieId">
              <input type="hidden" value="<%= title %>" name="title">
              <input class="btn btn-default" id="submit" name="submit" required type="submit" value="Done">
        </form>
      </div>

      <%- include('../includes/end.ejs'); %>