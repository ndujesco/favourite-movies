<%- include('../includes/head.ejs'); %>

  <title>My Top 10 Movies</title>
  </head>

  <body>
    <%- include('./nav.ejs'); %>
      <div class="container">
        <h1 class="heading">
          <%= name %> favourite Movies
        </h1>
        <p class="description">These are <%= name %> all time favourite movies.</p>

        <% movies.forEach( (movie)=> { %>


          <div class="card">
            <div class="front" style="background-image: url('<%= movie.imageUrl %>');">
              <p class="large">
                <%= movie.ranking %>
              </p>
            </div>
            <div class="back">
              <div>

                <div class="title">
                  <%= movie.title %> <span class="release_date">
                      <%= movie.year %>
                    </span>
                </div>
                <div class="rating">
                  <label>
                    <%= movie.rating %>
                  </label>
                  <i class="fas fa-star star"></i>
                </div>
                <p class="review">
                  <%= movie.review %>
                </p>
                <p class="overview">
                  <%= movie.description%>
                </p>

                <% if (user==="me" ) { %>
                  <input type="hidden" name="movieId" value="<%= movie.movieId %>">
                  <a href="/edit?movieId=<%= movie.movieId %>" class="button">Update</a>
                  <a class="button delete-button" onclick="askDelete(this)" type="btn">Delete</a>
                  <% } %>


              </div>
            </div>
          </div>
          <% }) %>

      </div>
      <% if (user==="me" ) { %>
        <div style="padding-bottom: 1rem;" class="container text-center add">
          <a href="/search-movie" class="button">Add Movie</a>
          <a href="/random-user" class="button" type="btn">Random List</a>
        </div>
        <% } %>

          <% if (user==="random" ) { %>
            <div style="padding-bottom: 1rem;" class="container text-center add">
              <a href="/my-movies" class="button">My list</a>
              <a href="/random-user" class="button" type="btn">Random List</a>
            </div>
            <% } %>

              <%- include('../includes/end.ejs'); %>
                <script src="/js/main.js"></script>